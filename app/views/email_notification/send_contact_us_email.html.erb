<!doctype html>
<<html>
<head>
	<meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
</head>
<body> 
	<h1>Someone has sent you a message from your site!</h1>
	<p>From: <%= @email.full_name %></p>
	<p>Email: <%= @email.email %></p>
	<p>Phone: <%= @email.phone %></p>
	<p>Preferred Contact Method: <%= @email.contact_method %></p>
	<p>Message: <%= @email.message %></p>

	<% if @email.contact_method == 'email' %>
		<p>Reply to <%= mail_to "#{@email.email}", "#{@email.first_name}" %></p>
	<% end %>
</body>
</html>