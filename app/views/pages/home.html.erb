<section class="home-about">

	<h1>Our Business</h1>

	<div class="content row">

		<div class="big-image large-6 columns">
			<%= image_tag("house.jpg", alt: "home-picture", title: "Exteriors") %>
		</div>
		<div class="large-1 columns"></div>

		<ul class="points small-12 large-5 columns">
			<li>Family owned since 2011</li>
			<li>Specializing in custom kitchen, bath, and basement remodel/finishes</li>
			<li>Over 95% of business comes from referrals of past customers</li>
			<li>Quality construction, details, and customer satisfaction</li>
		</ul>
	</div>

	<div class="button-container">
		<%= link_to "Learn more about us", "/about", class: "button" %>
	</div>
	

	<section class="sub-section">
		<h2>PARTNERS</h2>
		<ul class="partners large-block-grid-3 small-block-grid-1">
			<li><%= link_to (
						image_tag("concept175.png", alt: "concept_electric_logo", 
																				title: "Concept Electric",
																				width: 100,
																				target: "_blank")),
					"http://conceptelectricco.com" %>
			</li>
			<li><%= link_to (
						image_tag("absolute_logo.png", alt: "absolute_design_interiors_logo", 
																					 title: "Absolute Design Interiors",
																					 target: "_blank")), 
					"http://www.absolutedi.com" %>
			</li>
			<li><%= link_to (
						image_tag("araymond_logo.png", alt: "a_raymond_plumbing_logo", 
																					 title: "A. Raymond Plumbing",
																					 width: 97,
																				   target: "_blank")),
					"http://www.araymondplumbing.com" %>
			</li>
		</ul>
	</section>

</section>

<section class="home-projects">
	<h1>Kitchens, Baths, & More</h1>
	<ul class="small-block-grid-1 large-block-grid-2">
		<li><%= image_tag("brown_bath.jpg", alt: "brown_bath_image", width: "350") %></li>
		<li><%= image_tag("kitchen_cab.jpg", alt: "kitchen_image", width: "357") %></li>
	</ul>
	<a href="projects" class="button">See our work</a>
</section>
<a id="contact-form"></a>
<section class="home-form">
	<h1>Talk to us</h1>
	
	<div class="row">
		<form class="contact small-12 large-5 large-centered columns">

			<label for="fname">First Name:
				<input type="text" name="fname" id="fname" autofocus>
			</label>

			<label for="lname">Last Name:
				<input type="text" name="lname" id="lname">
			</label>

			<label for="email">Email:
				<input type="email" name="email" id="email">
			</label>

			<label for="phone">Phone:
				<input type="tel" name="phone" id="phone">
			</label>

			How shall we contact?<br>
			<input type="radio" name="contact" id="by_phone" value="phone" checked>
			<label for="by_phone">Phone</label>

			<input type="radio" name="contact" id="by_email" value="email">
			<label for="by_email">Email</label>
			<br>
			Tell us about the job you need done:
			<textarea></textarea>

			<input type="submit" value="submit" class="button tiny">

			<div class="rather">
				<p>Rather just talk?  Give us a call.</p>
				<p class="phone_number">(402) 714-5539</p>
			</div>

		</form>
	</div>
</section>

