<% content_for :title do %>Home<% end %>

<section class="banner">

	<div class="texture"></div>
	<a name="home"></a>
	<div data-magellan-destination="home" class="row active"></div>

	<div class="row bottom-banner-row">
		<div class="quote small-0 large-10 columns">
			<div class="largequote">"Mikeâ€™s quality workmanship speaks for itself. But the most important 	quality for us was his ability to complete each project on time and at or under our budget."</div>
			<div class="quote-author">- John and Missi Schembari</div>
		</div>
		<div class="social small-12 large-2 columns">
			<div class="small-block-grid-4 large-block-grid-2">
				<%= render 'social_icons' %>
	    </div>
	  </div>
	</div>

</section>

<ul class="modules large-block-grid-3 show-for-large-up">
	<li class="about-us">
		<h1>About Us</h1>
		<p>Learn about us and how we came to be.</p>
		<a href="about" class="button">Learn more</a>
	</li>

	<li class="projects">
		<h1>Our Projects</h1>
		<p>We do kitchens, baths, basements, and more.</p>
		<a href="projects" class="button">See our work</a>
	</li>

	<li class="contact">
		<h1>Talk To Us</h1>
		<p>Drop us an email or give us call anytime.</p>
		<a href="#contact-form" class="button">Contact us</a>
	</li>
</ul>

<section class="home-about">

	<h1>Our Business</h1>

	<div class="content row">

		<div class="big-image medium-6 large-6 columns">
			<%= image_tag("house.jpg", alt: "home-picture", title: "Exteriors") %>
		</div>
		<div class="medium-1 large-1 columns"></div>

		<ul class="points small-12 medium-5 large-5 columns">
			<li>Family owned since 2011</li>
			<li>Specializing in custom kitchen, bath, and basement remodel/finishes</li>
			<li>Over 95% of business comes from referrals of past customers</li>
			<li>Quality construction, details, and customer satisfaction</li>
		</ul>
	</div>

	<div class="button-container">
		<%= link_to "Learn more about us", "/about", class: "button" %>
	</div>
	

	<section class="sub-section">
		<h2>PARTNERS</h2>
		<ul class="partners large-block-grid-3 medium-block-grid-3 small-block-grid-1">
			<li><%= link_to (
						image_tag("concept175.png", alt: "concept_electric_logo", 
																				title: "Concept Electric",
																				width: 100,
																				target: "_blank")),
					"http://conceptelectricco.com" %>
			</li>
			<li><%= link_to (
						image_tag("absolute_logo.png", alt: "absolute_design_interiors_logo", 
																					 title: "Absolute Design Interiors",
																					 target: "_blank")), 
					"http://www.absolutedi.com" %>
			</li>
			<li><%= link_to (
						image_tag("araymond_logo.png", alt: "a_raymond_plumbing_logo", 
																					 title: "A. Raymond Plumbing",
																					 width: 97,
																				   target: "_blank")),
					"http://www.araymondplumbing.com" %>
			</li>
		</ul>
	</section>

</section>

<section class="home-projects">
	<h1>Baths, Kitchens & More</h1>
	<ul class="small-block-grid-1 medium-block-grid-2 large-block-grid-2">
		<li><%= image_tag("bath5_350.jpg", alt: "brown_bath_image", title: "Bathrooms", width: "350") %></li>
		<li><%= image_tag("kitchen4_350.jpg", alt: "kitchen_image", title: "Kitchens", width: "350") %></li>
	</ul>
	<a href="projects" class="button">See our work</a>
</section>
<a id="contact-form"></a>
<section class="home-form">
	<h1>Talk to us</h1>
	
	<div class="row">
		<%= form_for @email, html: {:class => 'contact small-12 medium-5 large-5 medium-centered large-centered columns' } do |f| %>

			<%= f.label :first_name %>
  		<%= f.text_field :first_name, required: true %>

  		<%= f.label :last_name %>
  		<%= f.text_field :last_name, required: true %>

  		<%= f.label :email %>
  		<%= f.text_field :email, required: true %>

  		<%= f.label :phone %>
  		<%= f.text_field :phone, required: true %>

			How shall we contact you?<br>
  		<%= f.radio_button :contact_method, "phone", { checked: true } %>
  		<%= f.label :contact_method, "Phone" %>

  		<%= f.radio_button :contact_method, "email" %>
  		<%= f.label :contact_method, "Email" %>
			<br>

			Tell us about the job you need done:
			<%= f.text_area :message, required: true %>

      <%= f.submit 'Send message', :class => "button tiny" %>

			<div class="rather">
				<p>Rather just talk?  Give us a call.</p>
				<p class="desktop phone_number">(402) 714-5539</p>
				<a href="tel:14026196463" class="mobile button tiny">Call us</a>
			</div>

  	<% end %>
	</div>
</section>

